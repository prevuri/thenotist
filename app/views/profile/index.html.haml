%div{:style => "float:left"}
  .container
    %ul.inline
      %li
        %div.circular{:style => "background:url(#{@profile_image}) no-repeat"}
      %li{:style => "vertical-align: top;"}
        %div.info
          %h2{:style => "font-size: 40px; margin-bottom:10px"}= @profile["name"]
          %div.profile_info 10 notes
          %div.profile_info 1000 friends
          %a.btn.btn-large.btn-primary{:style => "margin-top:30px; margin-left: 33px;"} 
            %i.icon-plus.icon-white
              Add Buddy


%div{:style => "float:right"}
  %h4
    =current_user.notes.length
    Notes
    .notes-list-container
      .notes-list
      - current_user.notes[0..5].each do |note|
        .notes-list-item
          = link_to note.title, note_path(note)
    - if current_user.notes.length > 5
      = link_to "...", note_path