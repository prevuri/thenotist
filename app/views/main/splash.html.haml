#splash
  .wrapper
    %section.big-splash-section
      / .background-overlay 
      .inner-wrapper
        .notist-logo
        %div.connect-fb-button
          = link_to content_tag(:span, 'Connect with Facebook'), omniauth_authorize_path(:user, :facebook), :class => "btn btn-large btn-block", :id => "splash-login-button"
        .big-splash
          %h1
            Organize. Share. Discuss.
          %h2
            A platform to share and discuss your notes and documents with friends and classmates.  
      .guide
        %a{:href => '#start-tour'}
          %i.icon-chevron-down   
