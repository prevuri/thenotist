#notes-main{ :'ng-controller' => 'NotesCtrl', :'ng-init' => 'init()' }
  .notes-header
    %h1 Notes
    .search-box.form-group
      %input.form-control{:type => 'text', :'ng-model' => 'searchText'}
      %span.input-icon.icon-search
    .sorting-options
      %ul
        %li.btn{:'ng-click'=> "setFilter = {shared: true, shared: false}; predicate='title'; reverse=!reverse; button='name'", :'ng-class'=>"{ 'active' : button == 'name' }"}
          Name
        %li.btn{:'ng-click'=> "setFilter = {shared: true, shared: false}; predicate='created_at'; reverse=!reverse; button='date'", :'ng-class'=>"{ 'active' : button == 'date' }"}
          Date
        %li.btn{:'ng-click'=> "setFilter = {shared: false}; button='uploaded'", :'ng-class'=>"{ 'active' : button == 'uploaded' }"}
          Uploaded
        %li.btn{:'ng-click'=> "setFilter = {shared: true}; button='shared'", :'ng-class'=>"{ 'active' : button == 'shared' }"}
          Shared

  .notes-index-page
    .notes-list-container
      .notes-list
        .notes-list-item.upload-form
          %ng-include{:src => "'/client_views/upload_form.html'"}
        .notes-list-item{ :'ng-repeat' => 'note in notes | filter:searchText | filter:setFilter | orderBy:predicate:reverse', :'ng-mouseover' => 'note.tooltipHidden = true' }
          %ng-include{:src => "'/client_views/grid_item.html'"}
        .notes-list-item{ :'ng-repeat' => 'note in sharedNotes' }
          %ng-include{:src => "'/client_views/grid_item.html'"}

    .share-note-form-container.modal.hide.fade{ :role => :dialog, :tabindex => -1, "aria-labelledby" => "myModalLabel", "aria-hidden" => true}
      .share-note-container.modal-body
        .form-container
          .form
        %h4 Note Shared With:
        .contributor-list
          .contrib-list-item{:'ng-repeat' => 'contrib in note.contributors'}
            .contrib-info
              .profile-container.circular
                %img.profile-image.circular{:'ng-src' => 'contrib.user.user_fb_data.profile_image'}
              .profile-link-container
                %a{:'ng-href' => '{{profilePath(contrib.user)}}'} {{contrib.user.name}}
              .delete-contrib
                %i.icon-remove.btn
      .share-interaction.modal-footer
        .error-label.hidden
        .btn.btn-primary.share-button{:'ng-click' => 'shareNote($event)'}
          %i.icon-share-alt.share-note-icon
            .share-action-text
              Share                 

    / .modal-container-container{ :'ng-class' => "{hidden: !overview.showing}", :'ng-click' => "hideOverview()" }
    /   .modal-container{ :'ng-class' => "{hidden: !overview.showing}", :'ng-click' => "hideOverview()" }
    /     %a.thumb-container{ :'ng-repeat' => "image in overview.images", :'ng-href' => "{{image.pageUrl}}" }
    /       %img.thumb-image{ :'ng-src' => "{{image.src}}" }
    / .full-screen-overlay{ :'ng-class' => "{hidden: !overview.showing}", :'ng-click' => "hideOverview()" }
