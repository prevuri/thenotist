%ul.inline
  %li.profile-image-section
    .profile-container.circular
      .profile-image.circular{:'ng-style' => "{background: 'url(' + user.user_fb_data.profile_image + ') no-repeat'}"}

  %li.profile-section
    .info
      %h2
        %a{:'ng-href' => '{{linkToProfile ? profilePath(user.id) : null}}', :'ng-class' => 'linkToProfile ? "text-link" : "no-link"'}
          {{user.name}}
        