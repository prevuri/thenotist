.note-item{ :data => {:id => note.id} }
  %i.icon-th.btn.overview-btn.appear-hover{ :data => {:path => api_note_path(note)} }
  = link_to note_path(note) do
    .img-preview{:style => "background-image: url(#{note.uploaded_files.first.public_path})"}    
  .btn-group.appear-hover
    - if shared
      = link_to unsubscribe_note_path(note), :class => 'btn usub' do
        %i.icon-remove
    - else
      %a.share-note-link{:note_id => note.id}
        %i.icon-share.share-note.btn{ "data-toggle" => "modal", "data-target" => "#container-#{index}" }
      / = link_to '', :note_id => note.id do
      /   %i.icon-share.share-note.btn
      = link_to edit_note_path(note) do
        %i.icon-edit.btn
      = link_to note_path(note), :method => :delete do
        %i.icon-remove.btn
  
  - unless shared
    .share-note-form-container.modal.hide.fade{ :id => "container-#{index}", :role => :dialog, :tabindex => -1, "aria-labelledby" => "myModalLabel", "aria-hidden" => true}
      %h3 Share this Note
      .share-note-container.modal-body
        .form-container
          .form
        /   %input#tagsinput.tagsinput{:name => "tagsinput", :style => "display: none;"}
        .btn.btn-primary.share-button
          %i.icon-share-alt.share-note-icon
          .share-action-text
            Share

        .share-interaction.modal-footer
          .processing-label.hidden This can take several minutes. You will be automatically redirected to your note when processing is done.
          .btn.btn-primary.submit-action
            %i.submit-action-icon.icon-cloud-upload
            .submit-action-text Upload


  #list-footer
    .big-info
      = link_to note.title, note_path(note), :class => 'text-link'
      .description= note.description
      .info
        - if shared
          Shared by #{note.user.name}
        - else
          - unless note.contributing_users.empty?
            Shared with #{note.contributing_users.first.name}
          - if note.contributing_users.length > 1
            and #{note.contributing_users.length-1} others
    .tiny-info
      %i.icon-comments
        = note.comments.length

  - if !shared
    .tooltip.fade.bottom.in.hidden
      .tooltip-arrow
      .ui-widget.tooltip-inner
        %input{:id => 'buddies', :type => 'text', :placeholder => "SHARE", :selected => false}

/ %img{:src => "#{note.uploaded_files.first.public_path}"}
