.account-shared-links
  - if devise_mapping.omniauthable?
    %h4.account-or-text or
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Sign In with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), 
        :class => 'btn btn-info'
      %br/
  - if controller_name != 'sessions'
    Already have an account?
    = link_to "Sign in.", new_session_path(resource_name), :class => 'text-link'
    %br/
  - if devise_mapping.registerable? && controller_name != 'registrations'
    Don't have an account?
    = link_to "Sign up.", new_registration_path(resource_name), :class => 'text-link'
    %br/
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to "Forgot your password?", new_password_path(resource_name), :class => 'text-link'
    %br/
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => 'text-link'
    %br/
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class => 'text-link'
    %br/
